{
  "manifest_version": 3,
  "name": "Youtube Ad Auto Skip",
  "description": "Automatically skip youtube ads",
  "version": "1.0.3",
  "author": "ryichk@gmail.com",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["scripts/index.js"]
    }
  ]
}